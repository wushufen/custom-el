{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "**/node_modules/*", "dist"],
  "include": ["**/*.js", "**/*.d.ts"]
}
